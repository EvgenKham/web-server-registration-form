# .env.example
PORT=10000
NODE_ENV=production

# Database (Render предоставит DATABASE_URL автоматически)
# DATABASE_URL=postgresql://[user]:[password]@[host]:[port]/[database]

# JWT
JWT_SECRET=generate_with_crypto_randomBytes_32

# Email (опционально для production)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# EMAIL_FROM=noreply@user-management.com

# Frontend URL (замените на ваш деплоенный фронтенд)
# FRONTEND_URL=https://your-frontend-app.onrender.com
# APP_URL=https://your-backend-app.onrender.com